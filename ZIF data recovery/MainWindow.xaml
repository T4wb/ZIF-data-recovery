<Window x:Class="ZIF_data_recovery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZIF_data_recovery"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300"
        ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="LoadFile" Content="Load File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,10,0,0" Height="24" Click="LoadFileClick"/>
        <Button x:Name="ResetBoard" Content="Reset" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,71,0,0" Height="24" Click="ResetBoardClick"/>
        <TextBox x:Name="Status" HorizontalAlignment="Left" Height="85" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="165" Margin="105,10,0,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>